<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ⭐⭐ ОСНОВНАЯ ТЕМА ПРИЛОЖЕНИЯ ⭐⭐ -->
    <style name="Theme.Trecker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/RedMy</item>
        <item name="colorPrimaryVariant">@color/RedMyDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/Blue</item>
        <item name="colorSecondaryVariant">@color/BlueDark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Для MaterialCardView -->
        <item name="materialCardViewStyle">@style/Widget.Trecker.CardView</item>
    </style>

    <!-- Стиль для MaterialCardView -->
    <style name="Widget.Trecker.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Тема для DatePicker (уже есть у вас) -->
    <style name="MyMaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/RedMy</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@color/Blue</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

</resources>